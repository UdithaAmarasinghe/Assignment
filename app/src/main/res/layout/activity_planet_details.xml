<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.PlanetDetailsActivity">

    <TextView
        android:id="@+id/txt_planet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Planet Name - "
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_18dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_planet_name_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text=""
        android:textSize="@dimen/text_size_16dp"
        app:layout_constraintStart_toEndOf="@+id/txt_planet_name"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/txt_orbital_period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Orbital Period - "
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_18dp"
        app:layout_constraintStart_toStartOf="@+id/txt_planet_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_planet_name" />

    <TextView
        android:id="@+id/txt_orbital_period_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text=""
        android:textSize="@dimen/text_size_16dp"
        app:layout_constraintStart_toEndOf="@+id/txt_orbital_period"
        app:layout_constraintTop_toTopOf="@+id/txt_orbital_period" />

    <TextView
        android:id="@+id/txt_gravity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Gravity - "
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_18dp"
        app:layout_constraintStart_toStartOf="@+id/txt_orbital_period"
        app:layout_constraintTop_toBottomOf="@+id/txt_orbital_period" />

    <TextView
        android:id="@+id/txt_gravity_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text=""
        android:textSize="@dimen/text_size_16dp"
        app:layout_constraintStart_toEndOf="@+id/txt_gravity"
        app:layout_constraintTop_toTopOf="@+id/txt_gravity" />

</androidx.constraintlayout.widget.ConstraintLayout>